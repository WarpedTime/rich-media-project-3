  <link rel="shortcut icon" href="/assets/img/favicon.png"/>
  <link rel="stylesheet" type="text/css" href="/assets/style.css"/>
  
  <style>
  
    .button {
      margin-top:10px;
      position: relative;
      display: inline-block;
      vertical-align: top;
      overflow: hidden;
      padding: 15px 30px;
      border: solid 3px white;
      border-radius: 3px;
      font: bold 12px sans-serif;
      text-transform: uppercase;
      text-decoration: none;
      letter-spacing: 1px;
      color: white;
      transition: .35s;
      color: black
    }
    
    .button:before {
      content: '';
      position: absolute;
      top: 0;
      right: 110%;
      height: 100%;
      width: 200%;
      background: black;
      transform: skewX( -15deg );
      transition: inherit;
    }
    
    .button:hover {
      color: white;
      }
      .button:hover:before {
        right: -10%;
      }
    
    .button span {
      position: relative;
    } 
  </style>
</head>
